<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TemaInicio" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="boton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
        <!-- <item name="android:background">@color/colorPrimaryDark</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="textfiel">
        <item name="android:typeface">serif</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="textfielwhite" parent="textfiel">
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="textotitulo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textotitulowhite" parent="textotitulo">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="textosecundario">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="textosecundariowhite" parent="textosecundario">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Hint" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#FFFF</item>
    </style>

    <style name="Counter" parent="TextAppearance.Design.Counter">
        <item name="android:textColor">#FFFF</item>
    </style>

    <style name="CounterOverFlow" parent="TextAppearance.Design.Counter.Overflow">
        <item name="android:textColor">#212121</item>
    </style>

</resources>
